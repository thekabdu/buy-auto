<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txt_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#1F2D3D</item>
    </style>

    <style name="txt_title_b">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#1F2D3D</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="receipttxt">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="label">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.02</item>
        <item name="android:textColor">#2F82D2</item>
    </style>
    
    <style name="selltitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3C4858</item>
    </style>
    
    <style name="frame">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:background">#2F82D2</item>
    </style>

    <style name="textView2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="textView5">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView6">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="txtCar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/button_bg10</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector</item>
    </style>

</resources>