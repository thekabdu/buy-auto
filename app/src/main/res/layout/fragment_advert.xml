<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.advert.AdvertFragment"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/adv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Объявления"
        android:textAppearance="@style/txt_title_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/adv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adv_title" />

    <TextView
        android:id="@+id/adv_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Продать-легко!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adv_img"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/textView5"
        android:textColor="#3C4858"/>

    <TextView
        android:id="@+id/adv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Добавьте объявление, и его увидят тысячи потенциальных покупателей. Войдите, чтобы получить доступ к своим объявлениям"
        app:layout_constraintTop_toBottomOf="@+id/adv_title_text"
        android:layout_marginHorizontal="16dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/adv_btn_prm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adv_img"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_bg15"
        android:backgroundTint="@color/frame"
        android:text="Добавить объявление"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/adv_text" />


</androidx.constraintlayout.widget.ConstraintLayout>