<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.yet.sellFragment.SellReceiptFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/autoConstrlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_titlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="История платежей"
            android:textAppearance="@style/selltitle"
            android:layout_marginVertical="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="13dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Квитанция"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:textAppearance="@style/txt_title"
        app:layout_constraintTop_toBottomOf="@+id/autoConstrlay"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/button_bg2"
        android:drawableTint="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="09.09.2019 \n14:09"
                android:textAppearance="@style/txt15"
                android:layout_margin="16dp"
                android:paddingEnd="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:src="@drawable/nomadlogo"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="21dp"
                android:text="Автообъявления"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:textAppearance="@style/textView6"
                android:background="@color/colorBackground"
                app:layout_constraintTop_toBottomOf="@+id/dateTime"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="№ квитанции :"
                android:layout_marginEnd="205dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt1"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:text="Объявление № :"
                android:layout_marginEnd="205dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt2"/>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:text="Итого оплачено :"
                android:layout_marginEnd="205dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt3"/>

            <TextView
                android:id="@+id/txt5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:text="ФИО покупателя :"
                android:textSize="14sp"
                android:layout_marginEnd="205dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt4"/>

            <TextView
                android:id="@+id/txt6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="14dp"
                android:text="Оплачено с :"
                android:layout_marginEnd="205dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt5"/>

            <TextView
                android:id="@+id/txt_user2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:text="10078909"
                android:textAppearance="@style/receipttxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt2"
                app:layout_constraintTop_toBottomOf="@+id/txt1"/>

            <TextView
                android:id="@+id/txt_user3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="13dp"
                android:text="1009"
                android:textAppearance="@style/receipttxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt3"
                app:layout_constraintTop_toBottomOf="@+id/txt_user2"/>

            <TextView
                android:id="@+id/txt_user4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="13dp"
                android:text="190₸"
                android:textAppearance="@style/receipttxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt4"
                app:layout_constraintTop_toBottomOf="@+id/txt_user3"/>

            <TextView
                android:id="@+id/txt_user5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="13dp"
                android:text="Толебавеа А.Г."
                android:textAppearance="@style/receipttxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt5"
                app:layout_constraintTop_toBottomOf="@+id/txt_user4"/>

            <TextView
                android:id="@+id/txt_user6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="13dp"
                android:text="Kaspi Bank, ****8999"
                android:textAppearance="@style/receipttxt"
                android:drawableStart="@drawable/mastercardlogo"
                android:drawablePadding="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt6"
                app:layout_constraintTop_toBottomOf="@+id/txt_user5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_prm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg2"
        android:backgroundTint="@color/frame"
        android:drawableTint="@color/colorWhite"
        android:text="@string/parametrs"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="150dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>