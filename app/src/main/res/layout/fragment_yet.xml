<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.yet.YetFragment"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/txt_title_b"
            android:text="Привет, Assel"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/num_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_bg10"
            android:backgroundTint="@color/frame"
            android:paddingHorizontal="29dp"
            android:paddingVertical="12dp"
            android:layout_margin="16dp"
            android:text="Счет: 100Т"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:textAppearance="@style/textView6"
        android:paddingVertical="20dp"
        android:text="Основные"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerView" />
    
    <Button
        android:id="@+id/btn_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtmain"
        android:background="@drawable/button_bg10"
        android:backgroundTint="#F9FAFC"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:gravity="fill"
        android:text="Избранные"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/icon_fav"
        android:drawableEnd="@drawable/ic_round_keyboard_arrow_right_24"/>

    <Button
        android:id="@+id/btn_kred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_fav"
        android:background="@drawable/button_bg10"
        android:backgroundTint="#F9FAFC"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:textAllCaps="false"
        android:gravity="fill"
        android:drawablePadding="12dp"
        android:text="Кредиты"
        android:drawableStart="@drawable/icon_credit"
        android:drawableEnd="@drawable/ic_round_keyboard_arrow_right_24"/>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_kred"
        android:background="@drawable/button_bg10"
        android:backgroundTint="#F9FAFC"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:textAllCaps="false"
        android:text="Избранные"
        android:gravity="fill"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/icon_chosen"
        android:drawableEnd="@drawable/ic_round_keyboard_arrow_right_24"/>

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обратная связь"
        android:textAppearance="@style/textView6"
        app:layout_constraintTop_toBottomOf="@+id/btn_pay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dp"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/btn_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_back"
        android:background="@drawable/button_bg10"
        android:backgroundTint="#F9FAFC"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="fill"
        android:drawablePadding="12dp"
        android:textAllCaps="false"
        android:text="Написать в поддержку"
        android:drawableStart="@drawable/icon_message"
        android:drawableEnd="@drawable/ic_round_keyboard_arrow_right_24"/>

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_write"
        android:background="@drawable/button_bg10"
        android:backgroundTint="#F9FAFC"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:gravity="fill"
        android:drawablePadding="12dp"
        android:text="Помощь"
        android:drawableStart="@drawable/icon_support"
        android:drawableEnd="@drawable/ic_round_keyboard_arrow_right_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>